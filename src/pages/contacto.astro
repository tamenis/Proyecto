---
import Layout from '../layouts/Layout.astro'
import { Db, MongoClient } from 'mongodb'
import {body,validationResult} from 'express-validator'
export const prerender = false

const uri = "mongodb://mongodb:27017/?directConnection=true&serverSelectionTimeoutMS=2000&appName=mongosh+2.0.2"
const client = new MongoClient(uri)

const placeholder = {
  Nombre: 'Nombre y apellidos',
  Correo: 'Correo electr칩nico',
  Telefono: 'Telef칩no'
}
const errors = { Nombre: '', Correo: '' }
if (Astro.request.method === 'POST') {
  try {
    const data = await Astro.request.formData()
    const nombre = data.get('Nombre')
    const correo = data.get('Correo')
    const telefono = data.get('Telefono')
    const disponibilidad = data.get('Disponibilidad')
    const mensaje = data.get('Mensaje')

    if (typeof nombre !== 'string' || nombre.length < 1) {
      placeholder.Nombre = 'Introduce tu nombre y apellidos. '
      if (typeof correo !== 'string' || correo.length < 1) {
      placeholder.Correo = 'Introduce un correo v치lido. '

      async function run (){
        try{
          await client.db().command({ping:1})
            console.log("Conexi칩n realizada con la base de datos")
            const db = client.db("Contactos")
            const collection = db.collection("Formularios")
            const doc = {
              Nombre:`${nombre}`,
              Correo:`${correo}`,
              Telefono:`${telefono}`,
              Disponibilidad:`${disponibilidad}`,
              Mensaje:`${mensaje}`
            }
            const result = await collection.insertOne(doc)
            console.log("Se ha registrado un nuevo formulario")
        } finally{
            await client.close()
        }
        run().catch(console.dir)
    }
    }
  
  }
  
  } catch (error) {
    if (error instanceof Error) {
      console.error(error.message)
    }
  }
}
---

<Layout title="Contacto" transition:animate="slide">
  <div slot="Content" class="p-6 sm:ml-64">
      <form method="post" action="/Contacto" class="p-2 border-2 border-transparent rounded-lg mt-16 max-w-screen mx-auto">
          <div class="grid grid-cols-2 gap-2">
              
              <label class="flex items-center justify-center h-32 rounded border-2 border-black shadow-xl bg-blue-700 dark:bg-white">
                  <input type="text" class="text-center rounded shadow-md bg-white mr-3 sm:mr-5 focus:outline-none border-2 border-black w-2/5" placeholder={placeholder.Nombre} name="Nombre"/>
              </label>
                  
              <label class="flex items-center justify-center h-32 rounded border-2 border-black shadow-xl bg-yellow-300 dark:bg-yellow-300">
