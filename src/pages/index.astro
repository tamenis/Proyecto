---
import { fade, slide } from "astro:transitions";
import Layout from "../layouts/Layout.astro";
---


<Layout title="index">

    <div slot="Content" transition:animate={slide()} class="p-6 sm:ml-64 dark:bg-black bg-white">
        <div class="p-2 border-2 border-transparent rounded-lg mt-16 w-auto h-auto">
           <div class="grid grid-cols-3 gap-2 mb-4">
              <div class="flex items-center justify-center h-32 rounded bg-red-600 dark:bg-red-600 duration-300 hover:scale-90">
                 <p class="text-2xl text-gray-400 dark:text-gray-500">
                  
                 </p>
              </div>
              <div class="flex items-center justify-center h-32 rounded bg-black dark:bg-white duration-300 hover:scale-90">
                 <p class="text-2xl text-gray-400 dark:text-gray-500">
             
                 </p>
              </div>
              <div class="flex items-center justify-center h-32 rounded bg-yellow-300 dark:bg-yellow-300 duration-300 hover:scale-90">
                 <p class="text-2xl text-gray-400 dark:text-gray-500">
                
                 </p>
              </div>
           </div>
           <div class="flex items-center justify-center h-40 mb-4 rounded bg-blue-700 dark:bg-blue-700 duration-300 hover:scale-90">
              <p class="text-2xl text-gray-400 dark:text-gray-500">
            
              </p>
           </div>
           <div class="grid grid-cols-2 gap-4 mb-4">
              <div class="flex items-center justify-center rounded bg-black h-32 dark:bg-white duration-300 hover:scale-90">
                 <p class="text-2xl text-gray-400 dark:text-gray-500">
                    
                 </p>
              </div>
              <div class="flex items-center justify-center rounded bg-red-600 h-32 dark:bg-red-600 duration-300 hover:scale-90">
                 <p class="text-2xl text-gray-400 dark:text-gray-500">
                    
                 </p>
              </div>
              <div class="flex items-center justify-center rounded bg-yellow-300 h-32 dark:bg-yellow-300 duration-300  hover:scale-90">
                 <p class="text-2xl text-gray-400 dark:text-gray-500">
                  
                 </p>
              </div>
              <div class="flex items-center justify-center rounded  hover:scale-90 bg-black h-32 duration-300 dark:bg-white">
                 <p class="text-2xl text-gray-400 dark:text-gray-500">
                 </p>
              </div>
           </div>
           </div>
        </div>
     </div>
     

</Layout>